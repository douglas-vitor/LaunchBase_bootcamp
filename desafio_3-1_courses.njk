{% extends "desafio_3-1_layout.njk" %}

{% block title %}
    <title>Desafio 3-1 | Courses | LaunchBase</title>
{% endblock title %}

{% block styles %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock styles %}

{% block content %}
    <section class="cards">
{% for item in data %}
        <div class="card" id="{{item.name}}">
            <div class="image"><img src="{{item.image}}" alt="Logo Starter"></div>
            <div class="info">
                <h3>{{item.module}}</h3>
            </div>
            <div class="price">
                <h1>{{item.price}}</h1>
            </div>
        </div>
{% endfor %}
    </section>
    <div class="modal-overlay">
        <div class="modal">
            <a class="expand-modal">
                <i class="material-icons">fullscreen</i>
            </a>
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>
            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>
{% endblock content %}

{% block scripts %}
    <script src="desafio_3-x.js"></script>
{% endblock scripts %}