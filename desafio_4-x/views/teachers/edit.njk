{% extends "layout.njk" %}

{% block content %}
    <form action="/teachers?_method=PUT" method="POST">
        <div class="cards">
            <div class="card">
                <section class="image" style="background: url({{teachers.avatar_url}}) no-repeat center center / cover;"></section>

                <div class="detalhes">
                    {% include "teachers/fields.njk" %}
                    <input type="hidden" name="id" value="{{teachers.id}}">
                </div>
            </div>
        </div>
    </form>
{% endblock content %}