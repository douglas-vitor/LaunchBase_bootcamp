{% extends "layout.njk" %}

{% block content %}
    <div class="cards">
            <table width="100%">
                <thead>
                    <tr>
                        <th>Nome completo</th>
                        <th>Acompanhamento</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    {% for teacher in teachers %}
                    <tr>
                        <td><span style="background-image: url({{teacher.avatar_url}});"></span>
                            {{teacher.name}}</td>

                        <td>
                            {% for area in teacher.area.split(",") %}
                            <span id="area">{{area}}</span>
                            {% endfor %}
                        </td>

                        <td><a href="teachers/{{teacher.id}}">Detalhes</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
    </div>
{% endblock content %}